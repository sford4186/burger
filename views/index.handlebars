<h1>Eat Da Burgers!</h1>

<ul>
  {{#each burgers}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Burger_Name:</span> {{this.burger_name}}</p>
      <p><span class="label">Devoured:</span> {{this.devoured}}</p>

      <button data-id="{{this.id}}" class="delquote">Devour</button>

      <a href="/{{this.id}}">Update this burger</a>
  	</li>
  {{/each}}
</ul>


<h2>Burgers that are devoured!</h2>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
  </div>

  <button type="submit">Add Burger</button>
</form>